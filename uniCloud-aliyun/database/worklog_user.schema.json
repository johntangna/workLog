{
	"bsonType": "object",
	"required": ["_coolcode_username", "_coolcode_password"],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"_coolcode_username": {
			"bsonType": "string",
			"description": "用户名",
			"trim": "both"
		},
		"_coolcode_realname": {
			"bsonType": "string",
			"description": "用户真实姓名",
			"trim": "both"
		},
		"_coolcode_password": {
			"bsonType": "string",
			"description": "加密后的密码",
			"trim": "both"
		},
		"_coolcode_role": {
			"bsonType": "array",
			"description": "角色，不允许重复",
			"label": "角色",
			"enum": [{
				"value": "1",
				"text": "管理员"
			}, {
				"value": "2",
				"text": "普通用户"
			}]
		},
		"_coolcode_status": {
			"bsonType": "array",
			"description": "用户状态",
			"label": "状态",
			"enum": [{
				"value": "0",
				"text": "禁用"
			}, {
				"value": "1",
				"text": "启用"
			}]
		}
	}
}
